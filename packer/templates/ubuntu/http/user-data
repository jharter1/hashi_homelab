#cloud-config
autoinstall:
  version: 1
  locale: en_US
  keyboard:
    layout: us
  
  network:
    version: 2
    ethernets:
      any:
        match:
          name: "en*"
        dhcp4: true
  
  ssh:
    install-server: true
    allow-pw: true
    disable_root: true
  
  packages:
    - qemu-guest-agent
  
  storage:
    layout:
      name: direct
    swap:
      size: 0
  
  late-commands:
    - echo 'packer ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/packer
    - chmod 440 /target/etc/sudoers.d/packer
    - curtin in-target --target=/target -- sed -i 's/GRUB_CMDLINE_LINUX_DEFAULT="[^"]*/GRUB_CMDLINE_LINUX_DEFAULT="console=tty0 console=ttyS0,115200n8/' /etc/default/grub
    - curtin in-target --target=/target -- sed -i 's/#GRUB_TERMINAL=.*/GRUB_TERMINAL="console serial"/' /etc/default/grub
    - echo 'GRUB_SERIAL_COMMAND="serial --speed=115200 --unit=0 --word=8 --parity=no --stop=1"' >> /target/etc/default/grub
    - curtin in-target --target=/target -- update-grub
    - curtin in-target --target=/target -- systemctl enable qemu-guest-agent
    - curtin in-target --target=/target -- systemctl enable serial-getty@ttyS0.service
  
  user-data:
    package_upgrade: false
    users:
      - name: packer
        passwd: "$6$WIsM0AXoJG.fM91k$tKbOOMzIBjIyQ68vfmSbpbD7AYLVDkbC1ZVPdcBi3iGsuk5Puet0v4.OD8aakxAdGlU6wOYi/OdqGZPgd3XOx."
        groups: [adm, sudo]
        lock-passwd: false
        sudo: ALL=(ALL) NOPASSWD:ALL
        shell: /bin/bash
