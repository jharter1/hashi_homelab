{
  "dashboard": {
    "title": "Nomad Cluster Overview",
    "tags": ["nomad", "cluster"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "type": "stat",
        "title": "Node Status",
        "targets": [
          {
            "expr": "count(nomad_client_uptime)",
            "legendFormat": "Total Nodes",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "green", "value": 3 }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "type": "stat",
        "title": "Running Allocations",
        "targets": [
          {
            "expr": "sum(nomad_client_allocations_running)",
            "legendFormat": "Total",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
        "type": "table",
        "title": "Node Details",
        "targets": [
          {
            "expr": "nomad_client_allocations_running",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "nomad_client_allocated_memory / 1024 / 1024",
            "format": "table",
            "instant": true,
            "refId": "B"
          },
          {
            "expr": "nomad_client_allocated_cpu",
            "format": "table",
            "instant": true,
            "refId": "C"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "job": true,
                "instance": true
              },
              "indexByName": {},
              "renameByName": {
                "node_id": "Node ID",
                "Value #A": "Running Allocs",
                "Value #B": "Memory (MB)",
                "Value #C": "CPU (MHz)"
              }
            }
          }
        ]
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "type": "timeseries",
        "title": "Allocations by Node",
        "targets": [
          {
            "expr": "nomad_client_allocations_running",
            "legendFormat": "{{node_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "type": "timeseries",
        "title": "CPU Allocated by Node",
        "targets": [
          {
            "expr": "nomad_client_allocated_cpu",
            "legendFormat": "{{node_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "hertz",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "type": "timeseries",
        "title": "Memory Allocated by Node",
        "targets": [
          {
            "expr": "nomad_client_allocated_memory / 1024 / 1024",
            "legendFormat": "{{node_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "type": "stat",
        "title": "Allocation States",
        "targets": [
          {
            "expr": "sum(nomad_client_allocations_running)",
            "legendFormat": "Running",
            "refId": "A"
          },
          {
            "expr": "sum(nomad_client_allocations_pending)",
            "legendFormat": "Pending",
            "refId": "B"
          },
          {
            "expr": "sum(nomad_client_allocations_terminal)",
            "legendFormat": "Terminal",
            "refId": "C"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null }
              ]
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Pending" },
              "properties": [
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      { "color": "yellow", "value": null }
                    ]
                  }
                }
              ]
            }
          ]
        }
      }
    ]
  },
  "overwrite": true
}
