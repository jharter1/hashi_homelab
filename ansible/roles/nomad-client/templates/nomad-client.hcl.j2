datacenter = "{{ datacenter }}"
region = "{{ region }}"
data_dir = "/opt/nomad"

telemetry {
  publish_allocation_metrics = true
  publish_node_metrics       = true
  prometheus_metrics         = true
}

client {
  enabled = true
  node_class = "{{ node_class }}"
  
  server_join {
    retry_join = {{ nomad_server_addresses | to_json }}
    retry_interval = "15s"
  }
  
  host_volume "grafana_data" {
    path = "{{ nas_mount_point }}/grafana"
    read_only = false
  }
  
  host_volume "loki_data" {
    path = "{{ nas_mount_point }}/loki"
    read_only = false
  }
  
  host_volume "minio_data" {
    path = "{{ nas_mount_point }}/minio"
    read_only = false
  }
  
  host_volume "prometheus_data" {
    path = "{{ nas_mount_point }}/prometheus"
    read_only = false
  }
  
  host_volume "uptime_kuma_data" {
    path = "{{ nas_mount_point }}/uptime-kuma"
    read_only = false
  }
  
  host_volume "registry_data" {
    path = "{{ nas_mount_point }}/registry"
    read_only = false
  }

  host_volume "artifactory_data" {
    path = "/opt/nomad-volumes/artifactory_data"
    read_only = false
  }

  host_volume "jenkins_home" {
    path = "{{ nas_mount_point }}/jenkins"
    read_only = false
  }

  host_volume "homepage_data" {
    path = "{{ nas_mount_point }}/homepage"
    read_only = false
  }

  host_volume "calibre_data" {
    path = "{{ nas_mount_point }}/calibre"
    read_only = false
  }

  host_volume "calibre_config" {
    path = "{{ nas_mount_point }}/calibre"
    read_only = false
  }

  host_volume "nextcloud_data" {
