#!/usr/bin/env fish
# Homelab Credentials Template
# Copy this file to .credentials and fill in your actual values
# WARNING: Never commit .credentials to git!
#
# Usage:
#   source .credentials

# Vault Credentials
set -x VAULT_ADDR "http://10.0.0.30:8200"
set -x VAULT_TOKEN "hvs.XXXXXXXXXXXXXXXXXXXXX"  # Replace with your root token
set -x VAULT_ROOT_TOKEN "hvs.XXXXXXXXXXXXXXXXXXXXX"  # Same as VAULT_TOKEN for convenience

# Proxmox Credentials  
set -x PROXMOX_PASSWORD "your-proxmox-password"
set -x PKR_VAR_proxmox_password "$PROXMOX_PASSWORD"

# Nomad Credentials
set -x NOMAD_ADDR "http://10.0.0.50:4646"

# AWS Credentials (if using Traefik SSL)
set -x AWS_ACCESS_KEY_ID "AKIAXXXXXXXXXXXXX"
set -x AWS_SECRET_ACCESS_KEY "your-aws-secret-access-key"

# Terraform Variables
set -x TF_VAR_vault_token "$VAULT_TOKEN"
set -x TF_VAR_vault_address "$VAULT_ADDR"

echo "âœ… Credentials loaded from .credentials"
echo "   VAULT_ADDR: $VAULT_ADDR"
echo "   VAULT_TOKEN: [SET]"
echo "   NOMAD_ADDR: $NOMAD_ADDR"
echo "   PROXMOX_PASSWORD: [SET]"
echo ""
echo "To use these credentials, run: source .credentials"
